{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Moltpostor",
  "version": "0.1.0",
  "identifier": "io.github.fristender.moltpostor",
  "build": {
    "frontendDist": "../../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev -w @moltpostor/web -- --host",
    "beforeBuildCommand": "npm run build -w @moltpostor/web"
  },
  "app": {
    "windows": [
      {
        "title": "Moltpostor",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
